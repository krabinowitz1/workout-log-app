<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_title"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/icons"
                android:layout_alignParentLeft="true"
                android:hint="Exercise"/>

            <LinearLayout
                android:id="@+id/icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="end">

                <ImageView
                    android:id="@+id/rest_time_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_access_time_24px"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="8dp"
                    />

                <ImageView
                    android:id="@+id/superset_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/ic_baseline_repeat_24px"
                    />

                <ImageView
                    android:id="@+id/more_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_more_vert_24px"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="8dp"
                    />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_table"
                android:layout_below="@+id/exercise_title"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">
                <TableRow
                    android:background="@color/colorPrimary"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Set"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reps"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Weight"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>

                </TableRow>
            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/exercise_table"
                android:background="#DAE8FC"
                >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_set"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#DAE8FC"
                android:textColor="#A9A9A9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD SET" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>