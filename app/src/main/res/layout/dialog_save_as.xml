<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Workout As"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="16dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/dialog_workout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Workout Name"
            android:layout_margin="16dp"
            android:layout_below="@id/dialog_title"/>

        <EditText
            android:id="@+id/dialog_workout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Workout Description"
            android:layout_margin="16dp"
            android:layout_below="@id/dialog_workout_name"/>

        <CheckBox
            android:id="@+id/dialog_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_workout_description"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List exercises as description"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/dialog_checkbox"
            android:layout_alignBaseline="@id/dialog_checkbox"/>
    </RelativeLayout>
</layout>